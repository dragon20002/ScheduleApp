<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlaceholderFragment">

    <kr.co.wintercoding.wintercodingcalendar.view.WeeklyCalendarView
        android:id="@+id/weekly_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/weekly_todo_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weekly_calendar_view" />

    <TextView
        android:id="@+id/weekly_no_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_todo"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/weekly_todo_recycler_view"
        app:layout_constraintEnd_toEndOf="@id/weekly_todo_recycler_view"
        app:layout_constraintStart_toStartOf="@id/weekly_todo_recycler_view"
        app:layout_constraintTop_toTopOf="@id/weekly_todo_recycler_view" />

</android.support.constraint.ConstraintLayout>